{
  "name": "project-3-group-8-frontend",
  "version": "0.1.0",
  "private": true,
  "description": "EventLink Frontend - CST 438 Project 3",
  "dependencies": {
    "expo": "^54.0.22",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-native-safe-area-context": "4.6.3",
    "react-native-screens": "~3.22.0",
    "react-native-web": "^0.21.0",
    "react-router-dom": "^6.8.0",
    "react-scripts": "^0.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "playwright:install": "playwright install",
    "demo:login": "playwright test tests/e2e/login.spec.js --headed --project=chromium",
    "demo:home": "playwright test tests/e2e/homepage.spec.js --headed --project=chromium",
    "demo:mobile": "playwright test --headed --project='Mobile Chrome'",
    "demo:all-browsers": "playwright test --headed",
    "demo:custom": "playwright test --headed --grep",
    "presentation:ui": "playwright test --ui --project=chromium",
    "presentation:report": "playwright test && playwright show-report"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
